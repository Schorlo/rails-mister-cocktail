<div class="container">
  <h1>List of cocktails</h1>
    <% @cocktails.each do |cocktail| %>
      <%= link_to cocktail.name, cocktail_path(cocktail) %>
      <ul>
      <% cocktail.doses.each do |dose| %>
        <li><%= dose.description %></li>
        <li><%= dose.ingredient.name %></li>
        <li><%= link_to 'Dose destroy', dose_path(dose), class: "button", method: :delete  %></li>
      <% end %>
      </ul>
    <% end %>

  <%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-primary" %>

</div>
